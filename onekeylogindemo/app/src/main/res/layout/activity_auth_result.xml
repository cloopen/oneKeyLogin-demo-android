<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.ccop.sms.activity.AuthResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/demo_line_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/demo_authenticationresult_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/demo_result_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text=" "
                    android:textColor="#4F7AFD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/demo_result_telecom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text=" "
                    android:textColor="#878EA4"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/demo_login_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="登录成功"
                    android:textColor="#495170"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/demo_authenticationresult_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="登录失败"
                    android:textColor="#495170"
                    android:textSize="21sp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/demo_try_again"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/demo_auth_bt"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/demo_return_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/demo_result_refresh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/demo_return_refresh"
                    android:layout_alignLeft="@+id/demo_return_refresh"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="33dp"
                    android:gravity="center_vertical"
                    android:src="@mipmap/demo_result_refresh"
                    android:text="再次体验"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TextView
                android:onClick="callPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="24小时客服：400-610-1019"
                android:textColor="#495170"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="欢迎咨询了解产品"
                android:textColor="#98A1C3"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="29dp"
                android:layout_marginRight="15dp">

                <WebView
                    android:id="@+id/shanyan_dmeo_baseweb_webview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
